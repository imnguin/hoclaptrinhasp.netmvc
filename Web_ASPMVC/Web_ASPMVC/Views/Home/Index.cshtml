@using Web_ASPMVC.Models
@{
    ViewBag.Title = "Trang chủ";
}
@Html.Action("LeftMenu", "Home")
<div class="span9">
    <div class="well np">
        <div id="myCarousel" class="carousel slide homCar">
            <div class="carousel-inner">
                @foreach (var item in ViewBag.slides)
                {
                    <div class="item">
                        <img style="width:100%" src="~/Content/Images/Slide/@item.Thumbnail" alt="bootstrap ecommerce templates">
                        <div class="carousel-caption">
                            <h4>@item.Title</h4>
                        </div>
                    </div>
                }
            </div>
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
        </div>
    </div>
    <!--
    New Products
    -->
    <div class="well well-small">
        <h3>SẢN PHẨM MỚI </h3>
        <hr class="soften" />
        <div class="row-fluid">
            <div id="newProductCar" class="carousel slide">
                <div class="carousel-inner">
                    <div class="item active">
                        <ul class="thumbnails">
                            @foreach (var newPro in ViewBag.pro)
                            {
                                <li class="span4">
                                    <div class="thumbnail">
                                        <a class="zoomTool" href="@Url.Action("productDetails", "Home", new { id = newPro.ID})" title="Thêm vào giỏ hàng"><span class="icon-search"></span> QUICK VIEW</a>
                                        <a href="#" class="tag"></a>
                                        <a href="@Url.Action("productDetails", "Home", new { id = newPro.ID})"><img src="~/Content/Images/Product/@newPro.Thumbnail" alt="bootstrap-ring"></a>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="item">
                        <ul class="thumbnails">
                            @foreach (var newPro in ViewBag.pro)
                            {
                                <li class="span4">
                                    <div class="thumbnail">
                                        <a class="zoomTool" href="@Url.Action("productDetails", "Home", new { id = newPro.ID})" title="Thêm vào giỏ hàng"><span class="icon-search"></span> QUICK VIEW</a>
                                        <a href="#" class="tag"></a>
                                        <a href="@Url.Action("productDetails", "Home", new { id = newPro.ID})"><img src="~/Content/Images/Product/@newPro.Thumbnail" alt="bootstrap-ring"></a>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <a class="left carousel-control" href="#newProductCar" data-slide="prev">&lsaquo;</a>
            <a class="right carousel-control" href="#newProductCar" data-slide="next">&rsaquo;</a>
        </div>
    </div>
    <div class="row-fluid">
        <ul class="thumbnails">
            @foreach (var newPro in ViewBag.pro)
            {
                <li class="span4">
                    <div class="thumbnail">
                        <a class="zoomTool" href="@Url.Action("productDetails", "Home", new { id = newPro.ID})" title="Thêm vào giỏ hàng"><span class="icon-search"></span> QUICK VIEW</a>
                        <a href="@Url.Action("productDetails", "Home", new { id = newPro.ID})"><img src="~/Content/Images/Product/@newPro.Thumbnail" alt=""></a>
                        <div class="caption cntr">
                            <p>@newPro.Name</p>
                            <p><strong>@String.Format("{0:0,0}", newPro.Price) VNĐ</strong></p>
                            <h4><a class="shopBtn" href="@Url.Action("AddCart","Cart", new { @iIdPro = newPro.ID, @strURL = Request.Url.ToString()})" title="Thêm vào giỏ hàng"> Thêm vào giỏ hàng </a></h4>
                            <br class="clr">
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
    <!--
    Featured Products
    -->
    <div class="well well-small">
        <h3><a class="btn btn-mini pull-right" href="products.html" title="View more">VIew More<span class="icon-plus"></span></a>SẢN PHẨM NỔI BẬT</h3>
        <hr class="soften" />
        <div class="row-fluid">
            <ul class="thumbnails">
                @foreach (var item in ViewBag.GroupProduct)
                {
                    <li class="span4">
                        <div class="thumbnail">
                            <a class="zoomTool" href="@Url.Action("AddCart","Cart", new { @iIdPro = item.ID, @strURL = Request.Url.ToString()})" title="Thêm vào giỏ hàng"><span class="icon-search"></span> QUICK VIEW</a>
                            <a href="@Url.Action("productDetails", "Home", new { id = item.ID})"><img src="~/Content/Images/Product/@item.Thumbnail" alt=""></a>
                            <div class="caption cntr">
                                <p>@item.Name</p>
                                <p><strong>@String.Format("{0:0,0}", item.Price) VNĐ</strong></p>
                                <h4><a class="shopBtn" href="@Url.Action("AddCart","Cart", new { @iIdPro = item.ID, @strURL = Request.Url.ToString()})" title="Thêm vào giỏ hàng"> Thêm vào giỏ hàng </a></h4>
                                <br class="clr">
                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>