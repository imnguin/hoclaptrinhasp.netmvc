@{
    ViewBag.Title = "product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Action("LeftMenu", "Home")
<div class="span9">
    <div class="well well-small">
        <h3>Sản phẩm </h3>
        <div class="row-fluid">
            <ul class="thumbnails">
                @foreach (var item in Model)
                {
                    <li class="span4">
                        <div class="thumbnail">
                            <a href="@Url.Action("productDetails", "Home", new { id = item.ID})" class="overlay"></a>
                            <a class="zoomTool" href="@Url.Action("productDetails", "Home", new { id = item.ID})" title=""><span class="icon-search"></span> Xem chi tiết</a>
                            <a href="@Url.Action("productDetails", "Home", new { id = item.ID})"><img src="~/Content/Images/Product/@item.Thumbnail" alt=""></a>
                            <div class="caption cntr">
                                <p>@item.Name</p>
                                <p><strong>@item.Price VNĐ</strong></p>
                                <h4><a class="shopBtn" href="@Url.Action("AddCart","Cart", new { @iIdPro = item.ID, @strURL = Request.Url.ToString()})" title="add to cart"> Thêm vào giỏ hàng </a></h4>
                                <br class="clr">
                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

