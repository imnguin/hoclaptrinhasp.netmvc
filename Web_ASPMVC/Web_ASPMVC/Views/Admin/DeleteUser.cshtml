@model Web_ASPMVC.Models.User

@{
    ViewBag.Title = "DeleteUser";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row grid-responsive">
    <div class="column ">
        <div class="card">
            <div class="card-title">
                <h3 style="text-align: center; font-weight: bold">XÓA SẢN PHẨM</h3>
            </div>
            <div class="card-block">
                <h3 style="text-align: center; font-weight: bold; color:red">Bạn có chắc muốn xóa tài khoản này?</h3>
                <div>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            Tên tài khoản
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.UserName)
                        </dd>
                        <dt>
                            Tên hiển thị
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                        <dt>
                            Ảnh đại diện
                        </dt>

                        <dd>
                            <img src="~/Content/Images/User/@Html.DisplayFor(model => model.Avatar)" width="200"  height="200"/>
                        </dd>

                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-default" /> |
                            @Html.ActionLink("Trở về", "ListUser")
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
