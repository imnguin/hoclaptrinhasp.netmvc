@model IEnumerable<Web_ASPMVC.Models.Category>
@{
    ViewBag.Title = "Danh sách danh mục";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h5 class="mt-2">@Html.ActionLink("Thêm mới", "CreateCategory")</h5><a class="anchor" name="tables"></a>
<div class="row grid-responsive">
    <div class="column ">
        <div class="card">
            <div class="card-title">
                <h3 style="text-align: center; font-weight: bold">DANH MỤC SẢN PHẨM</h3>
            </div>
            <div class="card-block">
                <table>
                    <thead>
                        <tr>
                            <th>
                                Tên danh mục
                            </th>
                            <th>
                                Trạng thái
                            </th>
                            <th>Tác vụ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @if(item.Status == true)
                                    {
                                        <span>Hiển thị</span>
                                    }
                                    else
                                    {
                                        <span>Không Hiển thị</span>
                                    }
                                </td>
                                <td>
                                    @Html.ActionLink("Sửa", "EditCategory", new { id = item.ID }) |
                                    @Html.ActionLink("Chi tiết", "DetailCategory", new { id = item.ID }) |
                                    @Html.ActionLink("Xóa", "DeleteCategory", new { id = item.ID })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

