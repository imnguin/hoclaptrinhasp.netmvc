@using Web_ASPMVC.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<Customer>
@{
    ViewBag.Title = "ListCustomer";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row grid-responsive">
    <div class="column ">
        <div class="card">
            <div class="card-title">
                <h3 style="text-align: center; font-weight: bold">KHÁCH HÀNG</h3>
            </div>
            <div class="card-block">
                <table>
                    <thead>
                        <tr>
                            <th>
                                Khách hàng
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Địa chỉ
                            </th>
                            <th>
                                SĐT
                            </th>
                            <th>
                                Ngày sinh
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Phone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Birthday)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="SubPage">
    @Html.PagedListPager(Model, page => Url.Action("ListProduct", new { page = page }))
</div>
<style>
    .SubPage li {
        display: inline;
    }
</style>