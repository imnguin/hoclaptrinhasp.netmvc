@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@foreach (var item in ViewBag.lstorder)
{
    <h2 style="text-align:center">THÔNG TIN ĐƠN HÀNG</h2>
    using (Html.BeginForm("OrderStatus","Admin", new {@id = @item.IdOrder}))
    {
        @Html.ValidationSummary(true)
        <table align="center">
            <tr style="height:40px">
                <td>Khách hàng: </td>
                <td style="font-weight:bold">@item.NameCustomer</td>
            </tr>
            <tr style="height:40px">
                <td>Sản phẩm: </td>
                <td style="font-weight:bold">@item.NameProduct</td>
            </tr>
            <tr style="height:40px">
                <td>Số lượng: </td>
                <td style="font-weight:bold">@item.Qty</td>
            </tr>
            <tr style="height:40px">
                <td>Màu: </td>
                <td style="font-weight:bold">@item.Color</td>
            </tr>
            <tr style="height:40px">
                <td>Ngày đặt: </td>
                <td style="font-weight:bold">@item.OrderTime</td>
            </tr>
            <tr style="height:40px">
                <td>Thanh toán: </td>
                @if (item.PaymentStatus == true)
                {
                    <td>Đã thanh toán</td>
                }
                else
                {
                    <td>chưa thanh toán</td>
                }
            </tr>
            <tr style="height:40px">
                <td>Điện thoại: </td>
                <td style="font-weight:bold">@item.Phone</td>
            </tr>
            <tr style="height:40px">
                <td>Địa chỉ: </td>
                <td style="font-weight:bold">@item.Address</td>
            </tr>
            <tr style="height:40px">
                <td><input type="submit" class="btn defaultBtn" value="Giao" /></td>
            </tr>
        </table>
        }
    }

