@model IEnumerable<Web_ASPMVC.Models.Product>
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!--Widgets-->
<div class="row grid-responsive mt-1">
    <div class="column">
        <div class="card">
            <div class="card-title">
                <h2 class="float-left">Đơn đặt hàng</h2>
                <div class="badge background-primary float-right"> Chưa giao: @ViewBag.Count</div>
                <div class="clearfix"></div>
            </div>
            <div class="card-block">
                @foreach (var item in ViewBag.lstOrder)
                {
                    <div class="mt-1">
                        <div class="float-left ml-1">
                            <p class="m-0"><strong><a href="@Url.Action("OrderDetails","Admin", new { id = item.IdOrder })">@item.NameCustomer</a></strong> <span class="text-muted">sản phẩm: @item.NameProduct</span></p>
                            <p class="text-small text-muted">@item.OrderTime</p>
                        </div>
                        <div class="clearfix"></div>
                        <hr class="m-0 mb-2" />
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="column">
        <div class="card">
            <div class="card-title">
                <h2 class="float-left">Khách hàng</h2>
                <div class="badge background-primary float-right">Tổng: @ViewBag.customer</div>
                <div class="clearfix"></div>
            </div>
            <div class="card-block">
                @foreach (var item in ViewBag.lstCustomer)
                {
                    <div class="mt-1">
                        <div class="float-left ml-1">
                            <p class="m-0"><strong>@item.Name</strong></p>
                            <p class="text-small text-muted">SĐT: @item.Phone</p>
                        </div>
                        <div class="clearfix"></div>
                        <hr class="m-0 mb-2" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<h5 class="mt-2">@Html.ActionLink("Thêm mới", "CreateProduct")</h5><a class="anchor" name="tables"></a>
<div class="row grid-responsive">
    <div class="column ">
        <div class="card">
            <div class="card-title">
                <h3 style="text-align: center; font-weight: bold">SẢN PHẨM</h3>
            </div>
            <div class="card-block">
                <table>
                    <thead>
                        <tr>
                            <th style="text-align: center">
                                Tên sản phẩm
                            </th>
                            <th style="text-align: center">
                                Ảnh
                            </th>
                            <th style="text-align: center">
                                Nhóm sản phẩm
                            </th>
                            <th style="text-align: center">
                                Đơn giá
                            </th>
                            <th style="text-align: center">
                                Số lượng tồn
                            </th>
                            <th style="text-align: center">Tác vụ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="text-align: center">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td style="text-align: center">
                                    <img src="~/Content/Images/Product/@item.Thumbnail" width="100" height="150" />
                                </td>
                                <td style="text-align: center">
                                    @Html.DisplayFor(modelItem => item.Group)
                                </td>
                                <td style="text-align: center">
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td style="text-align: center">
                                    @Html.DisplayFor(modelItem => item.Items_Left)
                                </td>
                                <td style="text-align: center">
                                    @Html.ActionLink("Sửa", "EditProduct", new { id = item.ID }) |
                                    @Html.ActionLink("Chi tiết", "DetailProduct", new { id = item.ID }) |
                                    @Html.ActionLink("Xóa", "DeleteProduct", new { id = item.ID })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

