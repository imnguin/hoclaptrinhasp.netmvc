@model Web_ASPMVC.Models.Product

@{
    ViewBag.Title = "Sửa sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row grid-responsive">
    <div class="column ">
        <div class="card">
            <div class="card-title">
                <h3 style="text-align: center; font-weight: bold">CHỈNH SỬA SẢN PHẨM</h3>
            </div>
            <div class="card-block">

                @using (Html.BeginForm("EditProduct", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ID)

                        <div class="form-group">
                            <label>Tên sản phẩm</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Ảnh sản phẩm</label>
                            <div class="col-md-10">
                                <input type="file" name="fileUpload" />
                                @ViewBag.thongbao
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Mô tả</label>
                            <div class="col-md-10">
                                <textarea name="Description" id="Description">@Model.Description</textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Trạng thái</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10">
                                <label>Tên danh mục</label>
                                @Html.DropDownList("IdCategory")
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Mô tả ngắn</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Nhóm sản phẩm</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Group, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Group, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-10">
                            <label>Màu sắc</label>
                            <select id="Color" name="Color">
                                <option value="Đen">Đen</option>
                                <option value="Đỏ">Đỏ</option>
                                <option value="Trắng">Trắng</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Ngày cập nhật</label>
                            <div class="col-md-10">
                                <input type="date" id="UpdateTime" name="UpdateTime"/>
                                @Html.ValidationMessageFor(model => model.UpdateTime, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Đơn giá</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Số lượng tồn kho</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Items_Left, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Items_Left, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Lưu" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
                <div>
                    @Html.ActionLink("Trở về", "ListProduct")
                </div>

            </div>
        </div>
    </div>
</div>
<script>CKEDITOR.replace("Description");</script>